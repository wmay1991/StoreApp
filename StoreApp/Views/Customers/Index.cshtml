@model IEnumerable<StoreApp.Core.Customer>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Customer List</h2>

<p>
    @Html.ActionLink("Create New", "Add")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.isActive)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.billing_address)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.billing_city)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.billing_state)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.billing_zip)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.isActive)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.billing_address)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.billing_city)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.billing_state)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.billing_zip)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id = item.customer_id }) |
            @*@Html.ActionLink("Details", "Details", new { id=item.customer_id }) |*@
            @Html.ActionLink("Delete", "Delete", new { id=item.customer_id })
        </td>
    </tr>
}

</table>
